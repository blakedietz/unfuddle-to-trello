{
  "manifest_version": 2,
  "name": "unfuddle2trello",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "*://whitecloud.unfuddle.com/*"
      ],
      // https://stackoverflow.com/questions/15959090/how-to-trigger-a-chrome-extension-content-script-for-a-given-hash-in-the-url/15960339#15960339
      "include_globs": [
        "*#/projects/*/tickets/by_number/*"
      ],
      "js": [
        "content.js",
        "jquery-1.7.1.min.js",
        "trello-client.js"
      ],
      "css": [
        "export-to-trello-button.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}